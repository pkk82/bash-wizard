# pyec - create virtual environment
alias pyec='python3 -m venv .venv'

# pyea - activate virtual environment
alias pyea='source .venv/bin/activate'

# pyeca - create virtual environment and activate it
alias pyeca='python3 -m venv .venv && source .venv/bin/activate'

# pii - pip install from requirements.txt
function pii() {
  if [ ! -f requirements.txt ]; then
    touch requirements.txt
  fi
  pip install -r requirements.txt
}
