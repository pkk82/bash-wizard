# fgr <dir> <term> - find files in given directory containing a term
function fgr() {
  local dir
  local term

  if [[ "$2" == "" ]]; then
    echo "Use: fgr <directory> <term>"
    return 1
  fi

  dir="$1"
  term="$2"

  find "$dir" -type f -exec grep -l "$term" {} \; 2>/dev/null
}


# fca <dir> <file> - display content of files in given directory with given name
function fca() {
  local dir
  local name

  if [[ "$2" == "" ]]; then
    echo "Use: fgr <directory> <name>"
    return 1
  fi

  dir="$1"
  name="$2"

  find "$dir" -type f -name "$name" -print -exec cat {} \; 2>/dev/null
}

# frm <dir> - find and remove directories in given directory
function frm() {
  local dir

  if [[ "$1" == "" ]]; then
    echo "Use: frm <directory>"
    return 1
  fi

  dir="$1"

  find "$dir" -type d -name "$dir" -exec rm -rf {} \; 2>/dev/null
}
